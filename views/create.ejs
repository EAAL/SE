	<body class="main">
		<script>
			$(document).ready(function() {
        		$("#datepicker1").datepicker();
				$("#datepicker1btn").click(function(event) {
					event.preventDefault();
					$("#datepicker1").focus();
				});

				$("#datepicker11").datepicker();
				$("#datepicker11btn").click(function(event) {
					event.preventDefault();
					$("#datepicker11").focus();
				});

				$('button#add-btn').click(function (e){
					e.preventDefault();
					var temp = '<tr> <td class="text-primary">' + $('input#datepicker1').val() + '		' + $('input#start-time').val() + '-' + $('input#end-time').val() + '</td><tr>' ;
					$('div#times fieldset table').append(temp);
					if($('input#dates').val() == ""){
						$('input#dates').val($('input#dates').val() + $('input#datepicker1').val() + ' ' + $('input#start-time').val() + '-' + $('input#end-time').val());
					}else{
						$('input#dates').val($('input#dates').val() + ',' + $('input#datepicker1').val() + ' ' + $('input#start-time').val() + '-' + $('input#end-time').val());
					}
				});
            });
		</script>
